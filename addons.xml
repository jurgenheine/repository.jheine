<addons>
	<addon id="script.skinsubtitlechecker" name="Skin Subtittle checker" version="0.9" provider-name="j.heine">
	  <requires>
		<import addon="xbmc.python" version="2.20.0"/>
		  <import addon="script.module.beautifulsoup" version="3.2.1"/>
	  </requires>
	  <extension point="xbmc.python.script" library="default.py">
		<provides>executable</provides>
	  </extension>
	  <extension point="xbmc.service" library="service.py" start="login" />
	  <extension point="xbmc.addon.metadata">
		<language/>
		<summary lang="en">Checks if there is a subtittle present for movies or tv-show episodes</summary>
		<description lang="en">
		  Checks if there is a subtitle present for movies or tv-show episodes on opensubtittle.org, addic7ed and Podnapisi.
		</description>
		<platform>all</platform>
		<disclaimer lang="en">Your skin has to be tweaked to use this script.</disclaimer>
		<disclaimer lang="fr">Votre skin doit être modifié pour utiliser ce script.</disclaimer>
		<disclaimer lang="de">Ihre skin hat gezwickt, um dieses Skript verwenden werden.</disclaimer>
		<disclaimer lang="es">Su skin tiene que ser ajustado para utilizar este script.</disclaimer>
		<disclaimer lang="it">Il tuo skin deve essere ottimizzato per utilizzare questo script.</disclaimer>
	  </extension>
	</addon>
	<addon
	  id="skin.confluence_withsubcheck"
	  version="2.7.4-0.6"
	  name="Confluence skin with Sub check"
	  provider-name="j.heine">
	  <requires>
		<import addon="xbmc.gui" version="5.9.0"/>
		  <import addon="script.skinsubtitlechecker" version="0.8"/>
	  </requires>
	  <extension
		point="xbmc.gui.skin"
		debugging="false"
		effectslowdown="1.0">
		<res width="1280" height="720" aspect="16:9" default="true" folder="720p" />
	  </extension>
	  <extension point="xbmc.addon.metadata">
		<summary lang="en_AU">Modded Confluence skin to support script.skinsubtitlechecker.</summary>
		<summary lang="en_GB">Modded Confluence skin to support script.skinsubtitlechecker.</summary>
		<summary lang="en_NZ">Modded Confluence skin to support script.skinsubtitlechecker.</summary>
		<summary lang="en_US">Modded Confluence skin to support script.skinsubtitlechecker.</summary>
		<summary lang="nl_NL">Modded Confluence skin to support script.skinsubtitlechecker.</summary>
		<platform>all</platform>
	  </extension>
	</addon>
	<addon
		id="skin.titan_with_sub"
		version="3.5.81-0.2"
		name="Titan with subtitle support"
		provider-name="marcelveldt modded by j.heine">
		<requires>
			<import version="5.9.0" addon="xbmc.gui"/>		
			<import addon="script.skinshortcuts" version="0.4.4"/>
			<import addon="script.skin.helper.service" version="1.0.0"/>
		<import addon="resource.uisounds.titan.modern" version="1.0.0"/>
		<import addon="script.skinsubtitlechecker" version="0.8"/>
		</requires>
		<extension
		point="xbmc.gui.skin"
		defaultthemename="Textures.xbt"
		debugging="false">		
			<res width="1920" height="1080" aspect="16:9" default="true" folder="1080i" />
			<res width="1920" height="1200" aspect="16:10" default="false" folder="1080i" />
		</extension>
		<extension point="xbmc.addon.metadata">
			<summary lang="de">MediaPortal's Titan Skin portiert für Kodi mit jeder Menge Funktionen.</summary>
			<summary lang="en">MediaPortal's Titan skin ported to Kodi enriched with lot's of features.</summary>
			<summary lang="nl">De Titanskin van MediaPortal is geconverteerd naar Kodi en verrijkt met talloze functionaliteiten</summary>
			<platform>all</platform>
			<license>GPL v2.0</license>
			<email></email>
			<source></source>
		</extension>
	</addon>
	<addon id="repository.jheine" name="Repository J. Heine" version="1.0" provider-name="J. Heine">
		<extension point="xbmc.addon.repository" name="Repository J. Heine">
			<info compressed="false">https://raw.githubusercontent.com/jurgenheine/repository.jheine/master/addons.xml</info>
			<checksum>https://raw.githubusercontent.com/jurgenheine/repository.jheine/master/addons.xml.md5</checksum>
			<datadir zip="true">https://raw.githubusercontent.com/jurgenheine/repository.jheine/master</datadir>
		</extension>
		  <extension point="xbmc.addon.metadata">
			<language/>
			<summary lang="en">J. Heine Repository</summary>
			<description>Addons by J. Heine.</description>
					<disclaimer></disclaimer>
					<platform>all</platform>
		  </extension>
	</addon>
</addons>